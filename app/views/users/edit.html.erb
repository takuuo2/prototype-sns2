<% if @user.errors.any? %>
  <%= @user.errors.count %>件のerrorが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="mx-auto" style="width: 480px">
  <h1>User info</h1>
  <%= form_with model: @user do |f| %>
    <div>
      <label for="inputName">Name</label><br>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    </div>

    <div>
      <label for="inputImage">Image</label><br>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>

    <div>
      <label for="inputIntroduction">Introduction</label><br>
      <%= f.text_area :introduction, autofocus: true, id: "inputIntroduction", placeholder:"introduction"%>
    </div>

    <%= f.submit "Update User" ,class: 'btn btn-secondary' %>
  <% end %>
</div>