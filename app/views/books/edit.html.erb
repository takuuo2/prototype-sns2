<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="mx-auto" style="width: 480px">
    <h1>Editing Book</h1>
    <%= form_with model: @book do |f| %>
      <div>
        <label>Title</label><br>
        <%= f.text_field :title %>
      </div>

      <div>
        <label>Body</label><br>
        <%= f.text_area :body %>
      </div>

      <%= f.submit 'Update Book',class: 'btn btn-success' %>

      <p class="edit">
      <%= link_to "Show",book_path(@book.id) %>
      |
      <%= link_to "Back", "/books" %>
      </p>
    <% end %>

</div>
